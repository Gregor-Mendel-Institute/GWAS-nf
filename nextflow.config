/*
 * -------------------------------------------------
 *  gwas-nf Nextflow config file
 * -------------------------------------------------
 * Default config options for all environments.
 */

// Global default params, used in configs

params.outdir = "./results"
params.genotype  = "/groups/becker/projects/becker_common/software/genotypes/1.0.0/regmap_horton_et_al_2012/all_chromosomes_binary.pkl.xz"
params.kinship  = "/groups/becker/projects/becker_common/software/genotypes/1.0.0/regmap_horton_et_al_2012/kinship_ibs_binary_mac5.pkl.xz"
params.phenotype = "/groups/becker/projects/becker_common/software/mtl/gwas-nf/test/*csv"
params.mac = 15
params.singletrait = false
params.alpha = 0.05

includeConfig 'conf/base.config'

profiles {
  local { process.executor = 'local' }
  cbe { includeConfig 'conf/cbe.config' }
  singularity { singularity.enabled = true }
  docker { docker.enabled = true }
  conda { process.conda = "$baseDir/environment.yml" }
}

timeline {
  enabled = true
  file = "${params.outdir}/execution_timeline.html"
}
report {
  enabled = true
  file = "${params.outdir}/execution_report.html"
}
trace {
  enabled = true
  file = "${params.outdir}/execution_trace.txt"
}
dag {
  enabled = true
  file = "${params.outdir}/pipeline_dag.svg"
}
